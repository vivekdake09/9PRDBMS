CREATE DATABASE COLLEGE;
USE COLLEGE;
CREATE TABLE STUDENT(ROLL_NO INT , NAME VARCHAR(20) , MARKS INT);

INSERT INTO STUDENT VALUES(1 , 'VIVEK' , 75);

INSERT INTO STUDENT VALUES(2 , 'ASHUTOSH' , 80);

INSERT INTO STUDENT VALUES(3 , 'TUSHAR' , 77);

INSERT INTO STUDENT VALUES(4 , 'SHASHWAT' , 74);

ALTER TABLE STUDENT ADD PRIMARY KEY(ROLL_NO);


----PATTERN MATCHING

SELECT * FROM STUDENT;

SELECT * FROM STUDENT WHERE ROLL_NO IN(1,4);

SELECT * FROM STUDENT WHERE NAME LIKE 'V%';

SELECT ROLL_NO FROM STUDENT GROUP BY ROLL_NO;

SELECT  NAME, MARKS FROM STUDENT GROUP BY NAME, MARKS HAVING MARKS<90;

SELECT * FROM STUDENT ORDER BY NAME;

SELECT * FROM STUDENT ORDER BY NAME DESC;
CREATE TABLE STUDENT2(ROLL_NO INT PRIMARY KEY , NAME VARCHAR(30) ,MARKS INT, DOB DATE  );

INSERT INTO STUDENT2 VALUES(91 , 'RAM' , 90 , '2005-01-01'  );
INSERT INTO STUDENT2 VALUES(92 , 'SHAM' ,91, '2005-02-02'  );
INSERT INTO STUDENT2 VALUES(93 , 'KARAN' ,92, '2005-03-03' );
INSERT INTO STUDENT2 VALUES(94 , 'ARJUN' , 93 ,'2005-04-04' );

SELECT * FROM STUDENT2;

SELECT * FROM STUDENT UNION SELECT * FROM STUDENT2;


---ARITHMETIC OPERATORS

SELECT * FROM STUDENT;

UPDATE STUDENT SET MARKS = MARKS + 20 WHERE ROLL_NO = 1;

UPDATE STUDENT SET MARKS = MARKS + 25 WHERE ROLL_NO = 2;

SELECT * FROM STUDENT;


-- c) List all machine allotments with student names, lab and machine numbers
SELECT s.stud_name, l.Lab_no, a.mach_no
FROM Student s
JOIN Allotment a ON s.stud_no = a.Stud_no
JOIN Lab l ON a.mach_no = l.mach_no;

-- d) List total number of lab allotments day wise
SELECT dayofweek, COUNT(*) AS total_lab_allotments
FROM Allotment
GROUP BY dayofweek;

-- e) Count of machines allocated to the 'CSIT' class
SELECT COUNT(*) AS machines_allocated_to_CSIT
FROM Allotment a
JOIN Student s ON a.Stud_no = s.stud_no
WHERE s.class = 'CSIT';

-- f) Machine allotment details of stud_no 5 with personal and class details
SELECT s.stud_no, s.stud_name, s.class, a.mach_no, a.dayofweek
FROM Student s
JOIN Allotment a ON s.stud_no = a.Stud_no
WHERE s.stud_no = 5;

-- g) Count of machines allocated in Lab_no 1 for Monday
SELECT COUNT(*) AS machines_allocated_in_lab1_on_monday
FROM Allotment
WHERE mach_no IN (SELECT mach_no FROM Lab WHERE Lab_no = 1) AND dayofweek = 'Monday';

-- h) Count of students class wise who have allocated machines in the labs
SELECT s.class, COUNT(DISTINCT s.stud_no) AS students_with_machine_allocation
FROM Student s
JOIN Allotment a ON s.stud_no = a.Stud_no
GROUP BY s.class;


-- i) Create a view listing stud_no, stud_name, mach_no, lab_no, dayofweek
CREATE VIEW StudentMachineAllotments AS
SELECT s.stud_no, s.stud_name, a.mach_no, l.Lab_no, a.dayofweek
FROM Student s
JOIN Allotment a ON s.stud_no = a.Stud_no
JOIN Lab l ON a.mach_no = l.mach_no;

-- j) Create a view listing machine allotment details for Thursday
CREATE VIEW ThursdayMachineAllotments AS
SELECT s.stud_name, l.Lab_no, a.mach_no
FROM Student s
JOIN Allotment a ON s.stud_no = a.Stud_no
JOIN Lab l ON a.mach_no = l.mach_no
WHERE a.dayofweek = 'Thursday';

